    <div class="card">
    <div class="card-body">
        <h1 class="card-title">{{author.name}}</h1>
        <h6 class="card-subtitle mb-3 text-muted">Born {{author.birthYear}}</h6>

        {{#if author.bio}}
        <div class="row mb-4">
            <div class="col">
                <h5>Bio</h5>
                <p>{{author.bio}}</p>
            </div>
        </div>
        {{/if}}

        <div class="btn-group">
            <a href="/authors/{{author.id}}/edit" class="btn btn-warning">Edit</a>
            <form class="d-inline" action="/authors/{{author.id}}/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this author?')">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a href="/authors" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div> 

<div class="row">
    {{#if books.length}}
        {{#each books}}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <h6 class="card-subtitle mb-2 text-muted">Published: {{publishedYear}}</h6>
                        <p class="card-subtitle mb-2 text-muted">{{isbn}}</p>
                        
                        <div class="btn-group">
                            <a href="/books/{{id}}" class="btn btn-info">View</a>
                            <a href="/books/{{id}}/edit" class="btn btn-warning">Edit</a>
                            <form class="d-inline" action="/books/{{id}}/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this book?')">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    {{else}}
        <div class="col">
            <p>No books found. <a href="/books/new">Add one now</a>!</p>
        </div>
    {{/if}}
</div> 

<div class="row mb-4">
    <div class="col">
        <a href="/authors/new" class="btn btn-primary">Add New Author</a>
    </div>
</div>