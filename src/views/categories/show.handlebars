<div class="card">
    <div class="card-body">
        <h1 class="card-title">{{category.name}}</h1>

        {{#if category.description}}
        <div class="row mb-4">
            <div class="col">
                <h5>Description</h5>
                <p>{{category.description}}</p>
            </div>
        </div>
        {{/if}}

        <div class="btn-group">
            <a href="/categories/{{category.id}}/edit" class="btn btn-warning">Edit</a>
            <form class="d-inline" action="/categories/{{category.id}}/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this category??')">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
            <a href="/categories" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div> 

<div class="row">
    {{#if category.books.length}}
        {{#each category.books}}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <h6 class="card-subtitle text-muted mb-2">Published: {{publishedYear}}</h6>
                        <p class="card-subtitle text-muted mb-2">{{isbn}}</p>
                        
                        <div class="btn-group">
                            <a href="/books/{{id}}" class="btn btn-info">View</a>
                            <a href="/books/{{id}}/edit" class="btn btn-warning">Edit</a>
                            <form class="d-inline" action="/books/{{id}}/delete" method="POST" onsubmit="return confirm('Are you sure you want to delete this book?')">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    {{else}}
        <div class="col">
            <p>No books found. <a href="/books/new">Add one now</a>!</p>
        </div>
    {{/if}}
</div> 

<div class="row mb-4">
    <div class="col">
        <a href="/categories/new" class="btn btn-primary">Add New Category</a>
    </div>
</div>